<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>タイトルを引っ張る変数</td>
      <td>ボディを引っ張る変数</td>
      <td>show</td>
      <td>edit</td>
      <td>destroy</td>
    </tr>

  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:book_path(@book), method: :patch, local: true do |f| %>
  <p class=field-label>Title</p>
  <div class="field"><%= f.text_field :title %></div>
  <p class=field-label>Body</p>
  <div class="field"><%= f.text_area :body %></div>
  <div class="submit"><%= f.submit 'Update Book' %></div>
<% end %>
<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>

